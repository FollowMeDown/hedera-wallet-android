<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_node_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_time"
        style="@style/PrimaryTextRow"
        android:textSize="@dimen/font_regular_large_size"
        android:text="@string/text_node"
        />

    <TextView
        android:id="@+id/text_node_account_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_time"
        style="@style/PrimaryTextRow"
        android:visibility="gone"
        android:textSize="@dimen/font_regular_medium"
        android:text="@string/text_account_id_value"
        />

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_seperator_table_row"
        />

</LinearLayout>
