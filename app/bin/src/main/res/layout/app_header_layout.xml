<RelativeLayout android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_top_bar"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image_side_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:src="@drawable/ic_hamburger"
        android:contentDescription="TODO" />
    <TextView
        android:id="@+id/actionbar_title"
        android:text="@string/text_get_started_with_hgc"
        style="@style/TopBarTitle"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/image_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_new_wallet"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:src="@drawable/ic_hgc"
        android:contentDescription="TODO" />
</RelativeLayout>